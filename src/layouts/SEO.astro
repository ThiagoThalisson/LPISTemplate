---
export interface Props {
  site?: string
  globalTitle: string
  globalDescription: string
}
const { site, globalTitle, globalDescription } = Astro.props
---

<!-- Meta Tags Generated with https://metatags.io -->
<meta property="og:type" content="website" />
<meta property="og:url" content={site} />
<meta property="og:title" content={globalTitle} />
<meta property="og:description" content={globalDescription} />
<meta property="og:image" content={`${site}/preview.png`} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={site} />
<meta property="twitter:title" content={globalTitle} />
<meta property="twitter:description" content={globalDescription} />
<meta property="twitter:image" content={`${site}/preview.png`} />
