            title={title}
            content={content}
            imageUrl={imageUrl}
            imageAlt={imageAlt}
          />
        </div>
      ),
      variant?.includes("section-seven") && (
        <div
          class="flex flex-col gap-6 md:gap-8 py-12"
          class:list={{
            "flex flex-col-reverse": classVariant?.includes("reversed"),
          }}
        >
          <div>
            <ImageBlock
              classVariant="lgRounded"
              imageWidth={400}
              imageHeight={400}
              imageUrl={imageUrl}
              imageFormat="jpg"
              imageAlt={imageAlt}
            />
          </div>
          <div class="flex flex-col gap-3">
            <h2 class="md:text-center">{title}</h2>
            <p class="md:text-center">{content}</p>
