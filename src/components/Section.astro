            title={title}
            content={content}
            imageUrl={imageUrl}
            imageAlt={imageAlt}
          />
        </div>
      ),
      variant?.includes("section-six") && (
        <div class="flex flex-col md:flex-row gap-8">
          <Card
            variant="card-seven"
            statement="This Is Part Of A Content Section"
            title={title}
            content={content}
            imageUrl={imageUrl}
            imageAlt={imageAlt}
          />
          <Card
            variant="card-seven"
            statement="This Is Part Of A Content Section"
