---
import type { Props as BaseProps } from "../BaseProps"
interface Props extends BaseProps {
  imageUrl: string
  imageAlt: string
}
const { variant, classVariant, title, content, imageUrl, imageAlt } =
  Astro.props

import Card from "../components/Card.astro"

import ImageBlock from "./ImageBlock.astro"
---

<section>
  {
    [
      variant?.includes("section-one") && (
        <div class="flex flex-col gap-6">
          <Card
            variant="card-three"
            classVariant="reversed"
            statement="This Is Part Of A Content Section"
            title={title}
            content={content}
            imageUrl={imageUrl}
            imageAlt={imageAlt}
          />
        </div>
      ),
      variant?.includes("section-two") && (
        <div>
          <Card
            variant="card-two"
            title={title}
            content={content}
            imageUrl={imageUrl}
            imageAlt={imageAlt}
          />
        </div>
      ),
      variant?.includes("section-three") && (
        <div class="flex flex-col gap-8">
          <Card
            variant="card-one"
            classVariant="reversed"
            statement="This Is Part Of A Content Section"
            title={title}
            content={content}
            imageUrl={imageUrl}
            imageAlt={imageAlt}
          />
          <Card
            variant="card-one"
            statement="This Is Part Of A Content Section"
            title={title}
            content={content}
            imageUrl={imageUrl}
            imageAlt={imageAlt}
          />
        </div>
      ),
      variant?.includes("section-four") && (
        <div class="flex flex-col gap-4">
          <Card
            variant="card-four"
            statement="This Is Part Of A Content Section"
            title={title}
            content={content}
            imageUrl={imageUrl}
            imageAlt={imageAlt}
          />
          <div class="flex flex-col md:flex-row">
            <Card
              variant="card-five"
              statement="This Is Part Of A Content Section"
              title={title}
              content={content}
              imageUrl={imageUrl as string}
              imageAlt={imageAlt}
            />
            <Card
              variant="card-five"
              statement="This Is Part Of A Content Section"
              title={title}
              content={content}
              imageUrl={imageUrl}
              imageAlt={imageAlt}
            />
          </div>
        </div>
      ),
      variant?.includes("section-five") && (
        <div class="flex flex-col md:flex-row py-16 gap-8">
          <Card
            variant="card-six"
            statement="This Is Part Of A Content Section"
            title={title}
            content={content}
            imageUrl={imageUrl}
            imageAlt={imageAlt}
          />
          <Card
            variant="card-six"
