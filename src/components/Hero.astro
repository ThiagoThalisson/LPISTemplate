---
import type { Props as BaseProps } from "../BaseProps"
export interface Props extends BaseProps {
  secondaryTitle: string
  imageUrl: string
  imageAlt: string
  key?: string
}

const {
  variant,
  classVariant,
  statement,
  title,
  secondaryTitle,
  content,
  imageUrl,
  imageAlt,
  key,
} = Astro.props

import Button from "./Button.astro"
import ImageBlock from "./ImageBlock.astro"
---

<div class="mt-[72px]">
  {
    [
      variant?.includes("hero-one") && (
        <div class="flex flex-col items-center relative py-12 px-6 gap-6 md:gap-8 ">
          <img
            class="object-cover absolute inset-0 w-full h-full z-[-10] brightness-50"
            src="./laptop.jpg"
            alt=""
          />
          <div class="flex flex-col gap-4 md:gap-3">
            <div class="flex flex-col gap-2">
              <p class="font-bold !text-accent-light text-center">
                {statement}
              </p>
              <h1 class="!text-dark-title text-center">{title}</h1>
            </div>
            <p class="!text-dark-paragraph text-center">{content}</p>
          </div>
          <Button
            variant="call-to-action"
            link="./"
            content="Link"
            classVariant="rounded-full"
          />
        </div>
      ),
      variant?.includes("hero-two") && (
        <div
          class="flex items-center gap-4 md:gap-8 px-6 md:py-16 md:max-w-5xl m-auto"
          class:list={{
            "flex-col md:flex-row": classVariant?.includes("default"),
            "flex-col-reverse md:flex-row-reverse":
              classVariant?.includes("reversed"),
          }}
        >
          <div class="w-full flex flex-col gap-4 md:gap-6 py-6">
            <div class="flex flex-col gap-2">
              <p class="font-bold !text-accent-base">{statement}</p>
              <h1>{title}</h1>
              <p>{content}</p>
            </div>

            <Button
              classVariant="filledLgRounded"
              variant="call-to-action"
              content="Call To Action"
            />
          </div>
          <ImageBlock
            classVariant="fullWidth lgRounded"
            imageWidth={500}
            imageHeight={500}
            imageUrl={imageUrl}
            imageFormat="jpg"
            imageAlt={imageAlt}
          />
        </div>
      ),
      variant?.includes("hero-three") && (
        <div
          class="flex flex-col md:flex-row items-center gap-4 md:gap-8"
          class:list={{
            "flex-col-reverse md:flex-row-reverse":
              classVariant?.includes("reversed"),
          }}
        >
          <div class="w-full flex flex-col gap-4 md:gap-8 px-6 md:px-10 lg:px-16 py-8">
            <div class="flex flex-col gap-2 ">
              <p class="font-bold !text-accent-base">{statement}</p>
              <h1>{title}</h1>
              <p>{content}</p>
            </div>

            <Button
              classVariant="filledLgRounded"
              variant="call-to-action"
              content="Call To Action"
            />
          </div>
          <ImageBlock
            classVariant="fullWidth"
            imageWidth={500}
            imageHeight={500}
            imageUrl="./laptop.jpg"
            imageFormat="jpg"
            imageAlt="Laptop photo."
          />
        </div>
      ),
      variant?.includes("hero-four") && (
        <div class="flex items-center flex-col gap-6 md:gap-8 px-6 py-6 md:py-16 md:max-w-5xl m-auto">
          <div class="w-full flex flex-col items-center gap-6 md:gap-8">
            <div class="flex flex-col items-center gap-2">
              <p class="font-bold !text-accent-base">{statement}</p>
              <h1>{title}</h1>
              <p>{content}</p>
            </div>

            <Button
              classVariant="filledLgRounded"
              variant="call-to-action"
              content="Call To Action"
            />
          </div>
          <ImageBlock
            imageWidth={800}
            imageHeight={350}
            imageUrl={imageUrl}
            imageFormat="jpg"
            imageAlt={imageAlt}
          />
        </div>
      ),
      variant?.includes("hero-five") && (
        <div class="flex items-center flex-col gap-4 md:gap-8 px-6 py-6 md:py-16 md:max-w-5xl m-auto">
          <div class="w-full flex-col md:flex-row flex justify-between md:px-16 gap-2">
            <ImageBlock
              classVariant="flexStart"
              imageWidth={128}
              imageHeight={90}
              imageUrl={imageUrl}
              imageFormat="jpg"
              imageAlt={imageAlt}
            />
            <ImageBlock
              classVariant="flexEnd"
              imageWidth={128}
              imageHeight={90}
              imageUrl={imageUrl}
              imageFormat="jpg"
              imageAlt={imageAlt}
            />
          </div>
          <div class="w-full flex flex-col items-center gap-6 md:gap-8">
            <div class="flex flex-col gap-3">
              <p class="font-bold !text-accent-base text-center">{statement}</p>
              <h1 class="text-center">{title}</h1>
              <p class="text-center">{content}</p>
            </div>

            <Button
              classVariant="filledLgRounded"
              variant="call-to-action"
              content="Call To Action"
            />
          </div>
          <div class="w-full flex-col md:flex-row flex justify-between md:px-16 gap-2">
            <ImageBlock
              classVariant="flexEnd"
              imageWidth={128}
              imageHeight={90}
              imageUrl={imageUrl}
              imageFormat="jpg"
              imageAlt={imageAlt}
            />
            <ImageBlock
              classVariant="flexStart"
              imageWidth={128}
              imageHeight={90}
              imageUrl={imageUrl}
              imageFormat="jpg"
              imageAlt={imageAlt}
            />
          </div>
        </div>
      ),
      variant?.includes("hero-six") && (
        <div class="flex items-center flex-col gap-4 md:gap-8 px-6 py-6 md:py-16 md:max-w-5xl m-auto">
          <div class="w-full flex flex-col md:flex-row gap-3 md:gap-8">
            <h1>{title}</h1>
            <div class="flex flex-col gap-3">
              <p>{content}</p>
              <Button
                classVariant="filledLgRounded"
                variant="call-to-action"
                content="Call To Action"
              />
            </div>
          </div>
          <ImageBlock
            imageWidth={1920}
            imageHeight={1080}
            imageUrl={imageUrl}
            imageFormat="jpg"
            imageAlt={imageAlt}
          />
        </div>
      ),
      variant?.includes("hero-seven") && (
        <div class="flex items-center flex-col gap-6 md:gap-8 px-6 py-6 md:py-16">
          <h1 class="font-light">{title}</h1>
          <div class="w-full flex flex-col items-center md:flex-row gap-3 md:gap-8">
            <ImageBlock
              classVariant="fullWidth"
              imageWidth={1920}
              imageHeight={1080}
              imageFormat="jpg"
              imageUrl={imageUrl as string}
              imageAlt={imageAlt}
            />
            <div class="w-full flex flex-col gap-3 md:gap-6">
              <h2 class="font-body">{secondaryTitle}</h2>
              <p>{content}</p>
              <Button
                classVariant="filledLgRounded"
                variant="call-to-action"
                content="Call To Action"
              />
            </div>
          </div>
        </div>
      ),
    ]
  }
</div>
